{"ast":null,"code":"export default {\n  name: \"TodoComp\",\n\n  data() {\n    return {\n      taches: [{\n        name: \"first action\",\n        completed: false\n      }],\n      action: \"\",\n      filter: \"all\",\n      retour: \"Tout cocher\"\n    };\n  },\n\n  methods: {\n    addNew() {\n      this.taches.push({\n        name: this.action,\n        completed: false\n      });\n      this.action = \"\";\n    },\n\n    deleteIt(tache) {\n      this.taches = this.taches.filter(ele => ele !== tache);\n    },\n\n    deleteTask() {\n      this.taches = this.taches.filter(task => !task.completed);\n    }\n\n  },\n  computed: {\n    cocher: {\n      get() {\n        return this.remain === 0;\n      },\n\n      set(value) {\n        this.taches.forEach(taches => taches.completed = value);\n\n        if (value) {\n          this.retour = \"Tout décocher\";\n        } else {\n          this.retour = \"Tout cocher\";\n        }\n      }\n\n    },\n\n    hideFoot() {\n      return this.taches.length > 0;\n    },\n\n    remain() {\n      return this.taches.filter(taches => !taches.completed).length;\n    },\n\n    tacheFinie() {\n      return this.taches.filter(taches => taches.completed).length > 0;\n    },\n\n    filterTasks() {\n      if (this.filter == \"todo\") {\n        return this.taches.filter(taches => !taches.completed);\n      } else if (this.filter == \"done\") {\n        return this.taches.filter(taches => taches.completed);\n      } else {\n        return this.taches;\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAyCI,eAAe;AACXA,MAAI,EAAE,UADK;;AAEXC,MAAI,GAAG;AACH,WAAM;AACFC,YAAM,EAAE,CAAC;AACLF,YAAI,EAAE,cADD;AAELG,iBAAS,EAAE;AAFN,OAAD,CADN;AAKFC,YAAM,EAAE,EALN;AAMFC,YAAM,EAAE,KANN;AAOFC,YAAM,EAAE;AAPN,KAAN;AASH,GAZU;;AAaXC,SAAO,EAAE;AACLC,UAAM,GAAG;AACL,WAAKN,MAAL,CAAYO,IAAZ,CAAiB;AACbT,YAAI,EAAE,KAAKI,MADE;AAEbD,iBAAS,EAAE;AAFE,OAAjB;AAII,WAAKC,MAAL,GAAY,EAAZ;AACP,KAPI;;AAOHM,YAAQ,CAACC,KAAD,EAAQ;AACd,WAAKT,MAAL,GAAa,KAAKA,MAAL,CAAYG,MAA